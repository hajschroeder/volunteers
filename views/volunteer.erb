<h2>Volunteer: <%= @volunteer.name %></h2>
<h3>Project: <%= @project.title %></h3>

<form action="/projects/<%= @volunteer.project_id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Edit volunteer name</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update</button>
</form>

<form action="/projects/<%= @volunteer.project_id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete volunteer</button>
</form>

<a href="/projects/<%= @volunteer.project_id %>">Back to <%= @project.title %></a>